<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Action bar theme -->
    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
        <item name="titleTextStyle">@style/App.ActionBar.Text</item>
    </style>

    <style name="App.ActionBar.Text" parent="@style/TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AdoptMeNow" parent="Theme.Material3.Light">
        <item name="colorPrimary">#2589FF</item>
    </style>

    <style name="Theme.AdoptMeNow" parent="Base.Theme.AdoptMeNow">
        <item name="tabStyle">@style/Widget.App.MainTabLayout</item>
        <item name="textFillColor">@color/black</item>
        <item name="colorOnSurface">#FFF</item>

        <!-- Make action bar transparent -->
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
    
    <style name="Widget.App.MainTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIconTintMode">@null</item>
        <item name="tabIconTint">@null</item>
        <item name="tabTextColor">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">#3988FF</item>
    </style>
    
    <style name="CarouselImage">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="primaryButton">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
</resources>