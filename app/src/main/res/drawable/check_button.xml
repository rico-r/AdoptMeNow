<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#849FBE" />
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <corners android:radius="8dp" />
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B6D3FF" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7EB2FF" />
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <corners android:radius="8dp" />
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:left="20dp"
                android:right="20dp"/>
        </shape>
    </item>
</selector>